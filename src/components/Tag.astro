---
export interface Props {
  name: string
  href?: string
  size?: 'sm' | 'md' | 'lg'
  variant?: 'default' | 'accent'
}

const { name, href, size = 'md', variant = 'default' } = Astro.props

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-0.5 text-xs',
  lg: 'px-3 py-1 text-sm',
}

const variantClasses = {
  default: 'bg-earth-100 text-sage-800 dark:bg-sage-700 dark:text-sage-200 hover:bg-earth-200 dark:hover:bg-sage-600',
  accent: 'bg-moss-100 text-moss-800 dark:bg-moss-900 dark:text-moss-200 hover:bg-moss-200 dark:hover:bg-moss-800',
}

const classes = `inline-flex items-center rounded-full font-medium transition-colors ${sizeClasses[size]} ${variantClasses[variant]}`
---

{href ? (
  <a href={href} class={classes}>
    {name}
  </a>
) : (
  <span class={classes}>
    {name}
  </span>
)}
